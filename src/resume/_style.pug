mixin style
  style.
    @import url(https://fonts.googleapis.com/css?family=Merriweather:400,700,400italic&amp;subset=latin,latin-ext);

    body { margin: 0; padding: 0; font-size: 10pt; font-family: 'Merriweather', serif; line-height: 150%; }
    code { font-family: 'Merriweather', serif; font-size: inherit; background: #f6f6f6; }
    #menu { position: fixed; bottom: 0; width: 100%; background: #f6f6f6; border: solid #000; border-width: 1px 0 0 0; }
    #menu ul { height: 1em; margin: 0 auto; padding: 0 5px; }
    #menu li { float: left; margin: 5px 0; padding: 2px 7px; border: #ccc solid; border-width: 0 0 0 1px; }
    #menu li:first-child { border: none; }
    #menu ul, #menu li { list-style-type: none; }
    #menu a { border: none; }

    #container { margin: .5cm auto; padding-bottom: 2em; width: 180mm; }
    #updated { text-align: right; }

    hr { border: solid #000; border-width: 0 0 .75pt 0; }
    h1, h2 { margin: 1em 0 .5em 0; }
    h1 { padding: 0 0 .6em 0; font-size: 18pt; }
    h2 { margin-bottom: 0; padding: .4em 0; font-size: 12pt; }

    h3 { margin: .3em 0 .2em 0; font-size: 11pt; }
    h3.papers { margin: .3em 0; padding-bottom: .2em; border: solid #999; border-width: 0 0 1px 0; }
    h4 { margin: .1em 0; font-size: 11pt; }

    h4.wp { margin: .3em 0 0 0; }
    h4.wp p { margin: .3em 0; color: #999; font-size: 10pt; }

    p, ul, dl { margin: .3em 0 .8em 0; padding: 0; }
    ul { margin-left: 2em; }

    a { color: #000; text-decoration: none; }
    a:hover { color: #c00; text-decoration: underline; }

    abbr { text-decoration: none; }

    dt, dd, .left, .right { margin: 0; padding: 0; }
    dt, .left { float: left; }
    dd, .right { margin: .3em 0; }

    dt { width: 18%; padding-right: 0.3em; text-align: right; font-size: 9pt; }
    dd { margin-left: 18%; }
    dt::after { content: ":"; }

    .row { display: flex; margin-bottom: 0.5em; }
    .row > .year { width: calc(18% - 0.5em); margin-right: 0.5em; padding-top: 0.2em; text-align: right; font-size: 9pt; line-height: 120%; }
    .row > .content { width: 82%; }
    .row > .content > p:first-child,
    .row > .content > p.small { margin-top: 0; margin-bottom: .2em; }

    p.small { font-size: 9pt; line-height: 130%; }

    span.award { color: #e99; }
    .left { width: 50%; }
    .right { margin-left: 50%; }
    .left *:first-child { margin-top: 0; }
    .secondary p { font-size: smaller; }

    hr { clear: both; margin-top: 2em; }

    @media only screen and (max-width: 960px) {
      #menu { position: static; background: none; border: none; }
      #menu li { margin-bottom: 0; }
      #menu li:first-child { padding-left: 0; }
      #menu li:first-child::before { content: "Table of Contents: "; }
      #container { padding-bottom: 0; }
      #updated { clear: left; margin-top: 0; padding-top: .3em; }
      dt { width: 25%; }
      dd { margin-left: 25%; }
    }
    @media only screen and (max-width: 180mm) {
      #container { width: inherit; }
    }
    @media print {
      #menu { display: none; }
      #container { margin-top: 0; padding-bottom: 0; }
      #updated { margin-top: 0; }
      body { font-size: 9pt; }
      h2 { font-size: 12pt; }
      h3 { font-size: 10.5pt; }
      h4 { font-size: 10pt; }
      h4.wp p { font-size: 9pt; }
      .page-break { page-break-before: always; }
      a { border: none; }
    }
