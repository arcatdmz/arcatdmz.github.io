  h2.ui.header
    i.book.icon
    | #{en ? 'Miscellaneous' : 'その他の活動'}
  .ui.divided.list.miscellaneous-list
    - for (let activity of misc.services.miscellaneous) {
    .item: .content
      .header !{en || !(activity.ja && activity.ja.title) ? activity.title : activity.ja.title}
      .meta !{[(en || !(activity.ja && activity.ja.date) ? activity.date : activity.ja.date) || "", (en || !(activity.ja && activity.ja.url)) && activity.url ? `<a href="${activity.url}">${activity.description}</a>` : (!en && (activity.ja && activity.ja.url) ? `<a href="${activity.ja.url}">${(activity.ja && activity.ja.description) || activity.description}</a>` : (!en && activity.ja && activity.ja.description) || activity.description || "")].filter(s => !!s).join(", ")}
    - } 

