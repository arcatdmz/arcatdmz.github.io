extends ../_layout

block vars
  - title = en ? 'Design' : 'デザイン';
  - me = 'design/';
  - var bodyClass = 'without-header-menu design';

block head
  link(rel='stylesheet', href=`${rootPath}stylesheets/design.css`)

block header
  .ui.text.fixed.menu
    .menu#research-menu
      a.item(href=basePath)
        i.lab.icon
        - if (en) {
        | Back to research
        - } else {
        | 研究
        span.mobile.hidden に戻る
        - }
    .right.menu#design-menu
      +right-header-menu()

block post-footer
  a.ui.circular.icon.popup-menu.large.grey.hidden.button
    i.sidebar.icon
  .ui.hidden.popup-menu.popup: .ui.divided.list
    a.item(href='#body')
      i.chevron.circle.up.icon
      .content #{en ? 'Top' : 'トップ'}
    a.item(href=`#portfolio`)
      i.history.icon
      .content #{en ? 'Portfolio' : 'ポートフォリオ'}
    a.item(href=`#skillset`)
      i.user.icon
      .content #{en ? 'Skillset' : 'スキルセット'}

block main-container
  .hero-unit
    h1.ui.center.aligned.icon.header
      i.circular.paint.brush.icon
      | #{title}
    .ui.container
      block message
        p While my primary focus and strength is on conducting research, I have been interested in creating concrete design artifacts&mdash;such as graphic and user interface design. This page shows my design portfolio.
  .ui.container: +main-design()
  +footer()

mixin main-design()
  section#portfolio: +portfolio()
  .ui.hidden.divider
  section#skillset: +skillset()

mixin portfolio()
  h2.ui.header #{en ? 'Portfolio' : 'ポートフォリオ'}
  - const sortedProjects = [];
  - for (const p of projects) {
  - if (!p.isDesignProject()) continue;
  - sortedProjects.push(p);
  - }
  - sortedProjects.sort(function(a, b){ return b.year.from - a.year.from; });
  - for (const p of sortedProjects) {
  +render-design-segment(p)
  - }
    // Project CRENO
    // SCI
    // digitalmuseum

mixin skillset()
  h2.ui.header #{en ? 'Skillset' : 'スキルセット'}
  block skillset
    p The following list focuses on concrete technical tools appearing in common job descriptions. High-level skills such as methods for rapid prototyping and user studies are omitted. See <a href="#{rootPath}resume.html">my resume</a> for more general information.
  .ui.hidden.divider
  .ui.stackable.two.columns.grid
    .column
      h3.ui.header #{en ? 'As a graphic designer' : 'グラフィックデザイン'}
      .ui.divided.list
        +skillset-graphic()
    .column
      h3.ui.header #{en ? 'As an interaction designer' : 'インタラクションデザイン'}
      .ui.divided.list
