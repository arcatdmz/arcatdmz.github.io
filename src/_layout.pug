include ./_layout-library
include ./_layout-components

doctype html
block lang
  - var lang = 'en';
html(lang=lang)
  - moment.locale(lang);
  - var en = lang === 'en';
  - var basePath = en ? rootPath : `${rootPath}ja/`;
  - var author = en ? 'Jun Kato' : '加藤 淳';
  - var me, p, title, description, imageUrl, bodyClass = undefined;
  block vars
    - me = '';
  head
    +head()
    script(async, src='https://www.googletagmanager.com/gtag/js?id=G-W5KXWN8CJD')
