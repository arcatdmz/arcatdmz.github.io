mixin render-design-segment(p)
  - const link = p.getLink(lang, basePath);
  .ui.basic.segment(id=p.project)
    - if (link === false) {
    img.ui.small.left.floated.image(src=`/images/icons/${p.icon}`)
    - } else {
    a.ui.small.left.floated.image(href=link): img(src=`/images/icons/${p.icon}`)
    - }
    h3.ui.header !{p.getDesignTitle(lang)}
    p !{p.getDesignDescription(lang)}
    - if (p.images) {
    .ui.tiny.images
      - for (const image of p.images) {
      img.ui.image(src=image)
      - }
    - }
    .ui.horizontal.list
      .item: .ui.basic.label
        i.calendar.icon
        | #{p.getYearString(lang)}
      - const tags = p.getDesignTags(lang);
      - if (tags.length > 0) {
      - for (const tag of tags) {
      .item !{tag}
      - }
      - }
    .ui.clearing.divider
