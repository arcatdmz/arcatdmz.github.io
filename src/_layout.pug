mixin head()
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  meta(name='description', content='')
  meta(property='fb:admins', content='503220390')
  block meta
    meta(name='author', content=author)
    title #{title} | junkato.jp
  link(rev='made', href='mailto:i@junkato.jp')
  link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Fira+Sans')
  - if (!en) {
  link(rel='stylesheet', href='//fonts.googleapis.com/earlyaccess/notosansjapanese.css')
  - }
  link(rel='stylesheet', href='/semantic/semantic.min.css')
  link(rel='stylesheet', href='/stylesheets/main.css')

mixin header(id)
  .ui.top.fixed.menu(id=id)
    a.active.item(href=en ? '/' : '/ja') #{author}
    - if (en) {
    a.item(href='/#about')
      i.user.circle.icon
      span.mobile.hidden About
    a.item(href='/#projects')
      i.lab.icon
      span.mobile.hidden Projects
    a.item(href='/publications')
      i.text.file.icon
      span.mobile.hidden Awards &amp; Publications
    a.item(href='/#contact')
      i.address.card.icon
      span.mobile.hidden Contact
    - } else {
    a.item(href='/ja/#about')
      i.user.circle.icon
      span.mobile.hidden 自己紹介
    a.ui.dropdown.item(href='/ja/#projects')
      i.lab.icon
      span.mobile.hidden プロジェクト
      block projects-menu
        i.dropdown.icon
        .menu
          .item a
          .item b
          .item c
    a.item(href='/ja/publications')
      i.text.file.icon
      span.mobile.hidden 受賞歴と発表文献
    a.item(href='/ja/#contact')
      i.address.card.icon
      span.mobile.hidden 連絡先
    - }
    .right.menu
      - if (en) {
      a.item(href='/ja')
        i.translate.icon
        span.mobile.hidden 日本語
      - } else {
      a.item(href='/ja/blog')
        i.wordpress.icon
        span.mobile.hidden ブログ
      a.item(href='/')
        i.translate.icon
        span.mobile.hidden English
      - }

mixin footer()
  .ui.divider
  footer.ui.center.aligned.container &copy; Jun Kato 2017
  script(type='text/javascript', href='/semantic/semantic.min.js')

html(lang='ja')
  block lang
    - var en = true, lang = 'en', basePath = '/';
  - var author = en ? 'Jun Kato' : '加藤 淳';
  block vars
  head
    +head()
  body
    block header
      +header()
    block main-container
      .ui.container#main
        block main
    +footer()
    //- script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity='sha256-k2WSCIexGzOj3Euiig+TlR8gA0EmPjuc79OEeY5L45g=', crossorigin='anonymous')
    script(src='https://code.jquery.com/jquery-3.2.1.min.js', crossorigin='anonymous')
    script(type='text/javascript') var en=#{en};lang="#{lang}";
    block scripts
